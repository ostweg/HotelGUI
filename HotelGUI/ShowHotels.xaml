<UserControl x:Class="HotelGUI.ShowHotels"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelGUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="200">
        <ItemsControl Name="HotelsToList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin=" 0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <TextBlock HorizontalAlignment="Left" Grid.Row="0" TextWrapping="Wrap" Text="{Binding Beschreibung}" VerticalAlignment="Center"></TextBlock>
                        
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
   
</UserControl>
