<Page x:Class="HotelGUI.UpdateHotel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdateHotel">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="50"/>
        <RowDefinition/>
    </Grid.RowDefinitions>
    <Label Grid.Column="0" Content="Update/Delete" FontSize="25" HorizontalAlignment="Center"></Label>
    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Orientation="Horizontal">
        <Label Width="200"  FontSize ="15" Content="Hotelname" ></Label>
        <TextBox Width="200" Name="tbLoad"></TextBox>
    </StackPanel>
    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" Orientation="Horizontal">
        <Label Name="hiddenLabel" Width="200"></Label>
        <Button Width="200" Content="Load" Click="Button_Click"></Button>
    </StackPanel>
    <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="center" Orientation="Horizontal" Margin="0,92,0,0">
        <Label Width="200" Content="Ort" ></Label>
            <TextBox Width="200" Name="tbOrt"></TextBox>
    </StackPanel>
    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="top" Orientation="Horizontal"  Margin="0,117,0,0">
        <Label Content="Land" Width="200"></Label>
        <TextBox Width="200" Name="tbLand"></TextBox>
    </StackPanel>
    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="top" Orientation="Horizontal"  Margin="0,144,0,0">
        <Label Content="Sterne" Width="200"></Label>
        <TextBox Width="200" Name="tbSterne"></TextBox>
    </StackPanel>
    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="top" Orientation="Horizontal"  Margin="0,171,0,0">
        <Label Content="Manager" Width="200"></Label>
        <TextBox Width="200" Name="tbManager"></TextBox>
    </StackPanel>
    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="top" Orientation="Horizontal"  Margin="0,197,0,0">
        <Label Content="Anzahl Zimmer" Width="200"></Label>
        <TextBox Width="200" Name="tbAnzahlZimmer"></TextBox>
    </StackPanel>
    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="top" Orientation="Horizontal"  Margin="0,224,0,0">
        <Label Content="Email" Width="200"></Label>
        <TextBox Width="200" Name="tbEmail"></TextBox>
    </StackPanel>
    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="top" Orientation="Horizontal"  Margin="0,250,0,0">
        <Label Content="Tägliche Kosten" Width="200"></Label>
        <TextBox Width="200" Name="tbTäglicheKosten"></TextBox>
    </StackPanel>
    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="top" Orientation="Horizontal"  Margin="0,280,0,0">
        <Label Name="hiddenLabel2" Width="200"></Label>
        <Button Width="100" Content="Update" Click="updateValuesOnClick"></Button>
        <Button Width="100" Content="Delete" Click="deleteValuesOnClick"></Button>
    </StackPanel>
    </Grid>
</Page>
