<Page x:Class="HotelGUI.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" Grid.Column="0">
            <Label Content="Anrede*"></Label>
            
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0" Grid.Column="0">
            <Label Content="Vorname*"></Label>
            <Label Content="Name*"></Label>
            <Label Content="Name zusatz"></Label>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,115,0,0" Grid.Column="0">
            <Label Content="Strassen Nr"></Label>
            <Label Content="Plz*"></Label>
            <Label Content="Ort*"></Label>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,215,0,0" Grid.Column="0">
            <Label Content="Telefon"></Label>
            <Label Content="Mobile"></Label>
            <Label Content="Email"></Label>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,315,0,0" Grid.Column="0">
            <Label Content="Web"></Label>
            <Label Content="Geburtsdatum"></Label>
            <Label Content="Pass Nr"></Label>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,415,0,0" Grid.Column="0">
            <Label Content="Nationalität"></Label>
        </StackPanel>
    </Grid>
</Page>
