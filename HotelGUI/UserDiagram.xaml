<Page x:Class="HotelGUI.UserDiagram"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserDiagram">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <TextBlock   Background="Blue" Width="200" Name="tblockHerren" Margin="0,0,30,0" FontSize="15" Foreground="White">
                
            </TextBlock>
            <TextBlock Background="LightPink" Width="200" Name="tblockFrauen"  FontSize="15"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center"  Orientation="Horizontal">
            <Label Content="Herren" FontSize="20" Width="100"></Label>
            <Label Width="50" Background="Blue" Margin="10"></Label>
            <Label Content="Frau" FontSize="20" Width="100" Margin="30,0,0,0"></Label>
            <Label Width="50" Background="Pink" Margin="10"></Label>
        </StackPanel>
       
        
    </Grid>
</Page>
